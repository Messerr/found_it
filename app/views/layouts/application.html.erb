<!DOCTYPE html>
<html>
<head>
  <title>FoundIt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='nav'>
			<% if current_user != nil %>
				<h2 style='margin-top: 0px;'>Welcome <%= current_user.fname %></h2>
				<%= link_to '<i class="fa fa-user fa-2x"></i>'.html_safe, user_path(current_user) %>  |
				<%= link_to '<i class="fa fa-plus-square fa-2x"></i>'.html_safe, new_post_path %>   |
				<%= link_to '<i class="fa fa-newspaper-o fa-2x"></i>'.html_safe, posts_path %>  |
				<%= link_to '<i class="fa fa-plane fa-2x"></i>'.html_safe, airports_path %> 	|			<%= link_to '<i class="fa fa-envelope-o fa-2x"></i>'.html_safe + " " + current_user.mailbox.inbox({:read => false}).count.to_s, :conversations %> |
				<%= link_to '<i class="fa fa-sign-out fa-2x"></i>'.html_safe, logout_path, method: :delete %>
			<% else %>
				<h2 style='margin-top: 0px;'>Welcome, Please sign in or sign up!</h2>
			<% end %>
	</div>
	<div class='notice'>
		<%= flash[:notice] if flash[:notice] %>
	</div>
	<div class='alert'>
		<%= flash[:alert] if flash[:alert] %>
	</div>
<%= yield %>
</body>
</html>
