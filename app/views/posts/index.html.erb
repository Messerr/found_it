
<div class='head'><h1>Latest finds!</h1></div>
			<% @posts.reverse.each do |post| %>
			<ul>
			<div class='postborder'>
					<li class="poststyling">
						<div class="posttitle">
						<%= link_to post.item, post_path(post) %> 
						</div>
						<span id ="timecreated">Found by: <%= post.user.fname %> on <%= post.created_at.strftime("%b. %d %Y") %> at <%= post.location %> </span>
						<br>
						<div class="postbodystyling">
						<%= post.description[0...1000] %>
						</div>
						<div id="spaceme"></div>
						<p class="readmore"><%= link_to "More", post_path(post) %></p>
					</li>
						</ul>
				<% end %>
				</div>
				</div>

