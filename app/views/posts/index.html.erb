
<div class='head'>
	<h1>Latest finds!</h1>
	</div>
			<% @posts.reverse.each do |post| %>
			<ul>
			<div class="postwrapper">
					<li class="poststyling">
						<div class="posttitle">
						<%= link_to post.item, post_path(post)%> 
						<% if post.user.fname == current_user.fname %>
						Found by: You on <%= post.created_at.strftime("%b. %d %Y") %> at <%= post.airport_name %>
						<% else %>
						Found by: <%= post.user.fname %> on <%= post.created_at.strftime("%b. %d %Y") %> at <%= post.airport_name %>
						<% end %>
						</div>
						<span id ="timecreated"> </span>
						<br>
						<div>
							<h1 style="text-align: center;"><%= post.status %><h1>
						</div>
						<div class="postbodystyling">
						<%= post.description[0...1000] %>
						</div>
						<div class="postimage">
							<%= image_tag post.avatar.url(:medium) %>
						</div>
						<div id="spaceme"></div>
						<% if post.status == "Unclaimed" && post.user != current_user  %>
							<p class="btn"><%= link_to "Claim", post_path(post) %></p>
						<% end %>
					</li>
						</ul>
				<% end %>
				</div>
				</div>

