<div class="userpostwrapper">
	<div class="userposttitle">
		<h3><%= @post.item %> at <%= @post.airport_name%> Status: <%= @post.status %></h3>
	</div>
	<p><%= @post.description %></p>
	<div class="postimage">
		<%= image_tag @post.avatar.url(:medium) %>
	</div>
	<h5 style="text-align: left; padding-left: 5px; bottom: 0;">Found by: <%= @post.user.fname %></h5>
	 <% if current_user == current_post.user %>
				<%= link_to 'edit', edit_post_path %> |
				<%= link_to 'delete', post_path, method: :delete, data: {confirm: "Really delete this post?"} %>
	<% end %> 
	<%= render 'claimform' %>
</div>