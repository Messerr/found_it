<% if @post.errors.any? %>
	<ul>
		<% @post.errors.full_messages.each do |message| %>
			<li> <%= message %></li>
		<% end %>
	</ul>
	
<%end%>

	<%= form_for @post, url: post_check_path, method: :post do |f| %>
	
	<%= hidden_field_tag :current_post, :value => @post.id %>
	<%= f.text_field :answer, placeholder: "Answer", class: "text_field", value: nil%> <br />

	<%= link_to 'Back to Posts', posts_path %>
	<%= submit_tag  'Answer' %>

	<% end %>

