<div class="profilepageavatar">
	<%= image_tag @user.avatar.url(:medium) %>
</div>
	<div class="userbiowrapper">
		<div class="userbiotitle">
			<h2 style='margin: 0;'>About <%= @user.fname %></h2>
		</div>
		<p><%= @user.bio %>
		<p><%= @user.email %>
		<% if @user == current_user %>
		<p><%= link_to '<i class="fa fa-pencil fa-2x"></i>'.html_safe, edit_user_path(current_user) %>
		<% end %>
	</div>
<div class="useritemwrapper">
	<div class="useritemstitle">
		<h2><%= @user.fname %>'s found items:</h2>
	</div>
	<div class="userpostsstyle">
<ul>
	<% @user.posts.each do |post| %>
 		<li><%= link_to post.item, post_path(post)%> at <%=link_to post.airport.name, airport_path(post.airport.id)%> - <%= post.status %></li>
 	<% end %>
 </ul>
	</div>
</div>


