
	<%= form_tag(signin_path, method: :post) do %>
		<%= label_tag %>
		<%= email_field_tag :email, nil, class: "text_field", placeholder: 'Email' %>
		<br>
		<%= label_tag %>
		<%= password_field_tag :password, nil, class: "text_field", placeholder: 'Password' %>
		<br>
		<a><button type="button" class="formbuttons"><%= link_to "Sign up", new_user_path %></button></a>
		<%= submit_tag "login", :class=> "formbuttons" %>

		
	<% end %>
